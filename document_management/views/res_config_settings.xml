<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_document_management" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.document.management</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="50"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" string="Document Management"
                     data-key="document_management"
                     groups="base.group_system">
                    <h2>General/Project/Quotation Folder Settings:</h2>
                    <div class="col-12 col-lg-6 o_setting_box">

                        <div class="o_setting_left_pane">
                            <div class="content-group mt16">
                                <label for="document_general_folder_base" class="o_light_label"/>
                                <field name="document_general_folder_base"/>
                            </div>
                        </div>
                        <div class="o_setting_left_pane">
                            <div class="content-group mt16">
                                <label for="document_project_folder_base" class="o_light_label"/>
                                <field name="document_project_folder_base"/>
                            </div>
                        </div>
                        <div class="o_setting_left_pane">
                            <div class="content-group mt16">
                                <label for="document_quotation_folder_base" class="o_light_label"/>
                                <field name="document_quotation_folder_base"/>
                            </div>
                        </div>
                        <div class="o_setting_left_pane">
                            <div class="content-group mt16">
                                <label for="document_crm_folder_base" class="o_light_label"/>
                                <field name="document_crm_folder_base"/>
                            </div>
                        </div>
                    </div>
                    <h2>Google Document Template:</h2>
                    <div class="col-12 col-lg-6 o_setting_box">

                        <div class="o_setting_left_pane">
                            <div class="content-group mt16">
                                <label for="document_doc_file_base_template" class="o_light_label"/>
                                <field name="document_doc_file_base_template"/>
                            </div>
                        </div>
                        <div class="o_setting_left_pane">
                            <div class="content-group mt16">
                                <label for="document_sheet_file_base_template" class="o_light_label"/>
                                <field name="document_sheet_file_base_template"/>
                            </div>
                        </div>
                        <div class="o_setting_left_pane">
                            <div class="content-group mt16">
                                <label for="document_power_point_file_base_template" class="o_light_label"/>
                                <field name="document_power_point_file_base_template"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
